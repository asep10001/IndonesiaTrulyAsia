<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".details.BatikDetail">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="20sp"
        android:backgroundTint="@android:color/holo_blue_dark"
        card_view:cardElevation="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="20sp">
            <TextView
                android:id="@+id/textNamaProvinsiCovid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginVertical="5sp"
                android:text="Nama Provinsi"
                android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/textJumlahKasusCovid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:paddingLeft="30sp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="Jumlah kasus : "
            android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/textJumlahSembuhCovid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:paddingLeft="30sp"
                android:textSize="18sp"
                android:layout_weight="1"
                android:paddingRight="10sp"
                android:text="Jumlah Sembuh : "
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/textJumlahMeninggalCovid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:paddingLeft="30sp"
                android:textSize="18sp"
                android:layout_weight="1"
                android:paddingRight="10sp"
                android:text="Jumlah Meninggal : "
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/textJumlahDirawatCovid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:paddingLeft="30sp"
                android:textSize="18sp"
                android:layout_weight="1"
                android:paddingRight="10sp"
                android:text="Jumlah Dirawat :"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>