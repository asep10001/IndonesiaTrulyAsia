<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".details.BatikDetail">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_museum_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="20sp"
        android:backgroundTint="@android:color/holo_blue_dark"
        card_view:cardElevation="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="20sp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/museum" />
            <TextView
                android:id="@+id/textNamaMuseumDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginVertical="5sp"
                android:text="Nama Museum"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/labelDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:paddingLeft="30sp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textFontWeight="400"
                android:fontFamily="monospace"
                android:layout_marginBottom="10dp"
                android:paddingRight="10sp"
                android:text="Deskripsi : "
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textDescriptionMuseumDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:paddingLeft="30sp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:paddingRight="10sp"
                android:text="Jumlah Sembuh : "
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/labelAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:paddingLeft="30sp"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Alamat : "
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/textAlamatMuseumDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:paddingLeft="30sp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="Jumlah kasus : "
                android:textColor="@android:color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>