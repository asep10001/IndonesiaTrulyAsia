<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/indicatorConatiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf = "@+id/card_container"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/mainSliderView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/indicatorConatiner"/>


        <LinearLayout
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <!-- A CardView that contains a TextView -->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">


                <ImageView
                    android:id="@+id/imgBatikMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/batik_main" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="bottom|right"
    android:background="#CDB53FA5">
    <TextView
        android:id="@+id/itemNamaBatikMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Wonderful Batik"
        android:textColor="@android:color/white"
        android:textSize="19sp" />
</LinearLayout>



            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardCovid19"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="20dp">

                    <ImageView
                        android:id="@+id/imageCovid19"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/covidmain" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="bottom|right"
                        android:background="#CDB53FA5">
                    <TextView
                        android:id="@+id/textCovid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:padding="10dp"
                        android:text="Covid 19"
                        android:textColor="@android:color/white"
                        android:textSize="19sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_museum"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="20dp">

                    <ImageView
                        android:id="@+id/imageMuseum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/museum_main" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="bottom|right"
                        android:background="#CDB53FA5">
                    <TextView
                        android:id="@+id/textMuseum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:padding="10dp"
                        android:text="Museum"
                        android:textColor="@android:color/white"
                        android:textSize="19sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_regions"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="20dp"
                >

                <ImageView
                    android:id="@+id/imageRegions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/indonesia_main" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="bottom|right"
                    android:background="#CDB53FA5">
                <TextView
                    android:id="@+id/textRegions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:padding="10dp"
                    android:text="Wonderful Regions"
                    android:textColor="@android:color/white"
                    android:textSize="19sp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
